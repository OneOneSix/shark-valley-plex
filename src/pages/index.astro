---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      html, body {
        background-color: #202938;
        color: white;
        margin: 0;
        padding: 0;
        min-height: 100%;
        font-family: system-ui, sans-serif;
      }

      main {
        padding: 2rem;
        max-width: 720px;
        margin: 0 auto;
      }

      img {
        max-width: 100%;
        height: auto;
      }

      ul {
        list-style: none;
        padding-left: 0;
        line-height: 1.8;
      }

      a img {
        max-width: 200px;
        cursor: pointer;
      }

      p {
        max-width: 720px;
        margin: 1rem auto;
      }

      .logo-container {
        text-align: center;
        margin-top: 2rem;
        margin-bottom: 2rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="logo-container">
        <img 
          src="/images/logo_stacked.png" 
          alt="Shark Valley Plex Logo" 
          style="max-width: 300px; height: auto;" 
        />
      </div>

      <p>
        As a subscription service, we provide unlimited access to the latest movies and TV shows. 
        Our library is constantly updated with new titles from all streaming apps and our platform is available on multiple devices. 
        We offer 24/7 customer support to ensure the best possible experience for our subscribers.
      </p>

      <img 
        src="/images/discover.jpg" 
        alt="Discover Image" 
        style="display: block; margin: 2rem auto;" 
      />

      <ul>
        <li>✅ Unlimited Access to Movies and TV Shows</li>
        <li>✅ New Titles Added Daily</li>
        <li>✅ Request Movies and TV Shows</li>
        <li>✅ Available On All Smart TVs and Smart Devices</li>
      </ul>

      <a 
        href="https://www.paypal.com/webapps/billing/plans/subscribe?plan_id=P-0JC88608Y8336474SL45HGFA" 
        target="_blank" 
        rel="noopener noreferrer"
        style="display: block; text-align: center; margin: 2rem 0;"
      >
        <img 
          src="/images/subscribe.png" 
          alt="Subscribe with PayPal" 
        />
      </a>
    </main>
    <Footer />
  </body>
</html>
