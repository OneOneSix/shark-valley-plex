---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <div style="text-align: center; margin-top: 2rem;">
        <img 
          src="/images/logo_stacked.png" 
          alt="Shark Valley Plex Logo" 
          style="max-width: 300px; height: auto;" 
        />
      </div>

      <p style="text-align: center;">
        Shark Valley Plex is a subscription based streaming service designed to seamlessly integrate all your favorite streaming platforms into one easy to use experience.
      </p>

      <img 
        src="/images/discover.jpg" 
        alt="Discover Image" 
        style="max-width: 100%; height: auto; display: block; margin: 2rem auto;" 
      />

      <ul style="list-style: none; padding-left: 0; line-height: 1.8;">
        <li>✅ Unlimited Access to Movies and TV Shows</li>
        <li>✅ New Titles Added Daily</li>
        <li>✅ Request Movies and TV Shows</li>
        <li>✅ Available On All Smart TVs and Smart Devices</li>
      </ul>

      <a 
        href="https://www.paypal.com/webapps/billing/plans/subscribe?plan_id=P-0JC88608Y8336474SL45HGFA" 
        target="_blank" 
        rel="noopener noreferrer"
        style="display: block; text-align: center; margin: 2rem 0;"
      >
        <img 
          src="/images/button_subscribe.png" 
          alt="Subscribe with PayPal" 
          style="max-width: 200px; height: auto; cursor: pointer;"
        />
      </a>
    </main>
    <Footer />
  </body>
</html>
